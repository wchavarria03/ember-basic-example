<div class="container login">
  <form>
    <div class="card card-container">
      <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
      <p id="profile-name" class="profile-name-card"></p>
      <form class="form-signin">
        <span id="reauth-email" class="reauth-email"></span>
        {{input value=username type='text' id='inputUsername' placeholder='Username (admin)' class='form-control' required=true autofocus=true}}
        {{input value=password type='password' id='inputPassword' placeholder='Password (admin)' class='form-control' required='true'}}
        <div id="remember" class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        {{#if errorMessage}}
          <div class="alert alert-danger">
            <strong>Login failed:</strong> {{errorMessage}}
          </div>
        {{/if}}
        <button class="btn btn-lg btn-primary btn-block btn-signin" type="button" {{action 'authenticate'}}>Sign in</button>
      </form>
      <a href="#" class="forgot-password">
        Forgot the password?
      </a>
    </div>
  </form>
</div>