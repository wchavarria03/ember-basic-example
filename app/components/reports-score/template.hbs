<div class="row bg-main-strong font-main-light score-area" doubleClick=>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="score-title text-center">{{scoreInfo.scoreTitle}}</div>
  </div>
  {{#if displayEmptyScore}}
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      Logo - NOT ENOUGH DATA
    </div>
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="font-secondary-strong score-factors-title">Not enough data is available on this business to calculate an accurate score</div>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      Logo
    </div>
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="font-secondary-strong score-factors-title">{{scoreInfo.factorsTitle}}</div>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ul class="list-unstyled">
              {{#each scoreInfo.factors as |factor|}}
                <li>
                  <i class="fa fa-times factor-symbol" aria-hidden="true"></i>
                  <span class="factor-reason">{{factor}}</span>
                </li>
              {{/each}}
            </ul>
          </div>
          {{#if displayCalculatedInfo}}
            <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 score-calculated-info-separator">
              <div class="score-calculated" {{action 'toggleDisplayCalculatedInfo'}}>
                <i class="fa fa-info-circle score-calculate-info-symbol score-calculated-info-symbol-bigger" aria-hidden="true"></i>
                <div class="score-calculated-text">This score uses tradeline and collections information, public filings, and other variables to predict the risk of serious credit delinquencies within the next 12 months.</div>
              </div>
            </div>
          {{else}}
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="score-how-calculated" {{action 'toggleDisplayCalculatedInfo'}}>
                <i class="fa fa-info-circle score-calculate-info-symbol" aria-hidden="true"></i>
                <div class="score-how-calculated-text">How is this score calculated?</div>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  {{/if}}

</div>